{
    "name": "pow-vision",
    "version": "1.0.0",
    "description": "POW Vision - Desktop overlay for Roblox moderation",
    "main": "dist/electron/main.js",
    "scripts": {
        "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
        "dev:vite": "vite",
        "dev:electron": "tsc -p tsconfig.electron.json && electron .",
        "build": "tsc -p tsconfig.electron.json && vite build",
        "build:win": "npm run build && electron-builder --win",
        "build:mac": "npm run build && electron-builder --mac",
        "build:all": "npm run build && electron-builder --win --mac"
    },
    "author": "POW Team",
    "license": "UNLICENSED",
    "private": true,
    "dependencies": {
        "electron-store": "^8.1.0",
        "tesseract.js": "^5.1.0"
    },
    "devDependencies": {
        "@types/node": "^20.0.0",
        "@types/react": "^18.2.0",
        "@types/react-dom": "^18.2.0",
        "@vitejs/plugin-react": "^4.2.0",
        "autoprefixer": "^10.4.19",
        "concurrently": "^8.2.2",
        "electron": "^33.0.0",
        "electron-builder": "^24.13.0",
        "postcss": "^8.4.38",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "tailwindcss": "^3.4.0",
        "typescript": "^5.4.0",
        "vite": "^5.2.0"
    },
    "build": {
        "appId": "com.pow.vision",
        "productName": "POW Vision",
        "directories": {
            "output": "release"
        },
        "files": [
            "dist/**/*"
        ],
        "mac": {
            "category": "public.app-category.utilities",
            "target": [
                "dmg",
                "zip"
            ]
        },
        "win": {
            "target": [
                "nsis",
                "portable"
            ]
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        }
    }
}